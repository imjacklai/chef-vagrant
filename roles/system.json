{
  "name": "system",
  "description": "system role",
  "json_class": "Chef::Role",
  "chef_type": "role",
  "default_attributes": {
    "locale": {
      "lang": "en_US.utf8",
      "lc_all": "en_US.utf8"
    },
    "tz": "Asia/Taipei",
    "authorization": {
      "sudo": {
        "groups": ["sysadmin"],
        "users": ["vagrant", "deployer"],
        "passwordless": true
      }
    },
    "java": {
      "install_flavor": "oracle",
      "jdk_version": "7",
      "oracle": {
        "accept_oracle_download_terms": true
      }
    },
    "nodejs": {
      "install_method": "source",
      "version": "4.3.1",
      "source": {
        "checksum": "61e2d58e861b6c9dbf0ac7624b718198cbd59b88a9de31a39a05de95a32eee73"
      },
      "npm": {
        "install_method": "source"
      }
    }
  },
  "run_list": [
    "recipe[locale]",
    "recipe[timezone-ii]",
    "recipe[sudo]",
    "recipe[users::sysadmins]",
    "recipe[git::default]",
    "recipe[java]",
    "recipe[nodejs::nodejs]"
  ]
}