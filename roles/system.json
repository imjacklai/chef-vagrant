{
  "name": "system",
  "description": "system role",
  "json_class": "Chef::Role",
  "chef_type": "role",
  "default_attributes": {
    "locale": {
      "lang": "en_US.utf8",
      "lc_all": "en_US.utf8"
    },
    "tz": "Asia/Taipei",
    "authorization": {
      "sudo": {
        "groups": ["sysadmin"],
        "users": ["vagrant", "deployer"],
        "passwordless": true
      }
    },
    "java": {
      "install_flavor": "oracle",
      "jdk_version": "7",
      "oracle": {
        "accept_oracle_download_terms": true
      }
    }
  },
  "run_list": [
    "recipe[locale]",
    "recipe[timezone-ii]",
    "recipe[sudo]",
    "recipe[users::sysadmins]",
    "recipe[git::default]",
    "recipe[java]"
  ]
}